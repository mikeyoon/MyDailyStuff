{
  "name": "my-daily-stuff",
  "version": "1.0.0",
  "description": "Frontend web application to MyDailyStuff",
  "scripts": {
    "watch": "run-p watch:tsc watch:assets build:vendor",
    "watch:tsc": "tsc -w",
    "watch:assets": "cpx \"src/**/*.{html,css}\" ../public/dist -C -w",
    "build:vendor": "cpx \"node_modules/bootstrap/dist/css/bootstrap.min.css\" ../public/dist -C",
    "build": "parcel build app-prod.html -d ../public/dist --out-file app.html --public-url /dist/",
    "tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "typescript": "4.3.2",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "bootstrap": "5.0.1"
  }
}
