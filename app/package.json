{
  "name": "my-daily-stuff",
  "version": "1.0.0",
  "description": "Frontend web application to MyDailyStuff",
  "scripts": {
    "watch": "rimraf ./dist && run-p build:vendor watch:**",
    "watch:tsc": "tsc -w",
    "watch:assets": "cpx \"src/**/*.{html,css}\" ./dist -w",
    "build:vendor": "cpx \"node_modules/bootstrap/dist/css/bootstrap.min.css\" ./dist",
    "build:tsc": "tsc",
    "build:assets": "cpx \"src/**/*.{html,css}\" ./dist -C",
    "build": "run-p build:tsc build:assets build:vendor"
  },
  "devDependencies": {
    "typescript": "4.3.2",
    "cpx": "^1.5.0",
    "rimraf": "3.0.2",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "bootstrap": "5.0.1"
  }
}
