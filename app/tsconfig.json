{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "target": "ES2020",
    "outDir": "./dist",
    "paths": {
      "@popperjs/core": ["/dist/popperjs.min.js"]
    }
  },
  "files": [
    "src/index.ts"
  ],
  "buildOnSave": false,
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
